<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soy6115" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulSombra</item>
        <item name="colorPrimaryVariant">@color/naranja</item>
        <item name="colorOnPrimary">@color/morado</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/negro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SinBarra" parent="Theme.Soy6115">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!--Sacado de este video
    https://www.youtube.com/watch?v=0s6x3Sn4eYo-->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_der</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_izq</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_izq</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_der</item>
    </style>

</resources>